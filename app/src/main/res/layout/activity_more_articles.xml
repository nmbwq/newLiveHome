<?xml version="1.0" encoding="utf-8"?>
<shangri.example.com.shangri.ui.view.SpringView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_heise"
    android:orientation="vertical"
    tools:context=".ui.activity.MoreArticlesActivity">

    <android.support.v4.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_more_bg"
                android:layout_width="match_parent"
                android:layout_height="185dp">

                <ImageView
                    android:id="@+id/iv_go_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/fanhui_2" />

                <TextView
                    android:id="@+id/tv_more_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="111"
                    android:textColor="@color/white"
                    android:textSize="21sp" />
            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/rv_more"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</shangri.example.com.shangri.ui.view.SpringView>