<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/tianjia_tanchuang"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/color_dialog_shape"
            android:gravity="center"
            android:hint="请输入要添加职位的名称"
            android:textColor="#ffffff"
            android:textColorHint="#dadada"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_below="@+id/et1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/color_dialog_shape"
            android:gravity="center"
            android:hint="请输入要添加人的姓名"
            android:textColor="#ffffff"
            android:textColorHint="#dadada"
            android:textSize="14sp"

            />

        <EditText
            android:id="@+id/et3"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_below="@+id/et2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/color_dialog_shape"
            android:gravity="center"
            android:hint="请输入要添加人的联系方式"
            android:textColor="#ffffff"
            android:textColorHint="#dadada"
            android:textSize="14sp"
            android:inputType="number"
            />


        <TextView
            android:id="@+id/tv_commit"
            style="@style/color_white_15"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_below="@+id/et3"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/color_dialog_commit_shape"
            android:gravity="center"
            android:text="确认" />

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_below="@+id/tv_commit"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/color_dialog_cancle_shape"
            android:gravity="center"
            android:text="取消"
            android:textColor="#d0a76c"
            android:textSize="15sp" />
    </RelativeLayout>


</RelativeLayout>
