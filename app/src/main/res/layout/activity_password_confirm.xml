<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing_denglu"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/password_confirm_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:src="@mipmap/ic_land_back" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="忘记密码"
        android:textColor="#ffffff"
        android:textSize="35dp" />

    <RelativeLayout
        android:id="@+id/this_head"
        android:layout_width="@dimen/dp_304"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_repassword"
        android:layout_alignLeft="@+id/et_repassword"
        android:layout_marginTop="49dp"
        android:background="@drawable/color_dialog_commit_shape28">


        <EditText
            android:id="@+id/et_password"
            android:layout_width="304dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="31dp"
            android:textColor="@color/white"
            android:textColorHint="#40ffffff"
            android:textSize="17sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/et_repassword"
        android:layout_width="@dimen/dp_304"
        android:layout_height="wrap_content"
        android:layout_below="@+id/this_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/color_dialog_commit_shape28">

        <EditText
            android:id="@+id/et_password2"
            android:layout_width="304dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="31dp"
            android:textColor="@color/white"
            android:textColorHint="#40ffffff"
            android:textSize="17sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/tv_login"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginTop="91dp"
        android:src="@mipmap/denglu_bkydj" />
</LinearLayout>