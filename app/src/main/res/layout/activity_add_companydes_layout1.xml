<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_heise">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_appbar_layout_black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/setting_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:src="@mipmap/ic_land_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="@dimen/dp_12"
                android:gravity="center_vertical"
                android:text="公司信息"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34" />


        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_select_image"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_marginBottom="10dp"
                android:background="#04ffffff"
                android:paddingLeft="19dp"
                android:paddingRight="19dp">

                <TextView
                    style="@style/color_white_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="公司logo" />


                <ImageView
                    android:id="@+id/im_photo"
                    android:layout_width="70dp"
                    android:layout_height="58dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/gsxx_mrlogo" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#04ffffff"
                android:paddingLeft="19dp"
                android:paddingRight="19dp">

                <TextView
                    style="@style/color_white_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="公司名称" />

                <EditText
                    android:id="@+id/et_company_name"
                    style="@style/color_white_12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="70dp"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入您的公司名称请输入您的公司名称请输入您的公司名称"
                    android:textColorHint="#999999" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#201b1b1b" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#04ffffff"
                android:paddingLeft="19dp"
                android:paddingRight="19dp">

                <TextView
                    style="@style/color_white_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="电话" />

                <EditText
                    android:id="@+id/et_numner"
                    style="@style/color_white_12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint=""
                    android:textColorHint="#999999" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#201b1b1b" />

            <RelativeLayout
                android:id="@+id/ll_select_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#04ffffff"
                android:paddingLeft="19dp"
                android:paddingRight="19dp">

                <TextView
                    style="@style/color_white_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="公司规模" />

                <TextView
                    android:id="@+id/et_company_number"
                    style="@style/color_white_12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/im_1"
                    android:background="@null"
                    android:hint="请选择"
                    android:textColorHint="#999999"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/im_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_wd_more" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#201b1b1b" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#04ffffff"
                android:paddingLeft="19dp"
                android:paddingRight="19dp">

                <TextView
                    style="@style/color_white_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="旗下主播" />

                <EditText
                    android:id="@+id/et_anchor_number"
                    style="@style/color_white_12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请填写（单位：人）"
                    android:inputType="number"
                    android:textColorHint="#999999" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#04ffffff"
                android:orientation="vertical"
                android:paddingLeft="19dp"
                android:paddingTop="18dp"
                android:paddingRight="19dp"
                android:paddingBottom="18dp">

                <TextView
                    style="@style/color_white_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司介绍" />


                <EditText
                    android:id="@+id/et_des"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="该介绍将会在招聘信息详情页展示，起到公司推广、吸引优质主播的作用，请认真填写呦。"

                    android:maxLength="251"
                    android:textColor="#ffffff"
                    android:textColorHint="#999999"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="19dp"
                android:paddingRight="19dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wenan"
                    />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/appbar"
                android:layout_marginTop="10dp"
                android:background="#04ffffff"
                android:paddingLeft="19dp"
                android:paddingRight="19dp">

                <ImageView
                    android:id="@+id/im1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/faren_renzheng" />

                <TextView
                    android:id="@+id/tv_name_four"
                    style="@style/color_white_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/im1"
                    android:text="法人认证" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/tv_id_name"
                        style="@style/color_white_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="郭英金" />

                    <LinearLayout
                        android:id="@+id/ll_id_nocommit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:text="去认证"
                            android:textColor="#666666"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_wd_more" />

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl1"
                android:background="@mipmap/bg_heise" />


            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv1"
                android:background="#04ffffff"
                android:paddingLeft="19dp"
                android:paddingRight="19dp">

                <ImageView
                    android:id="@+id/im2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/gongsi_renzheng" />

                <TextView
                    style="@style/color_white_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/im2"
                    android:text="企业认证" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/tv_company_name"
                        style="@style/color_white_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="测地级市科技公司"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_commit_nocommit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_company_type"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:text="去认证"
                            android:textColor="#666666"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_wd_more" />

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp">


                <TextView
                    android:id="@+id/tv_commit"
                    android:layout_width="300dp"
                    android:layout_height="41dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/color_dialog_commit_shape12"
                    android:gravity="center"
                    android:text="提交（暂不认证）"
                    android:textColor="#d0a76c"
                    android:textSize="17sp" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
