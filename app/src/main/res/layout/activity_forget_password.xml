<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing_denglu"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/forgot_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:src="@mipmap/ic_land_back" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="忘记密码"
        android:textColor="#ffffff"
        android:textSize="35dp" />

    <RelativeLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:background="@drawable/color_dialog_commit_shape28">

        <EditText
            android:id="@+id/user_tel"
            android:layout_width="304dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:paddingLeft="31dp"
            android:textColor="@color/white"
            android:textColorHint="#40ffffff"
            android:textSize="17sp"
            android:maxLength="11"
            />

        <ImageView
            android:id="@+id/im_closephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:src="@mipmap/denglu_close" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="304dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@mipmap/dl_srk">


        <EditText
            android:id="@+id/forgot_code"
            android:layout_width="304dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="31dp"
            android:textColor="@color/white"
            android:textColorHint="#40ffffff"
            android:maxLength="6"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/forgot_send_sms"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/get_code_text"
            android:textColor="#d0a76c"
            android:textSize="14dp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/forgot_next"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginTop="91dp"
        android:src="@mipmap/dl_wxyb" />


</LinearLayout>