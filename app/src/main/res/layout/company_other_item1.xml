<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">

    <shangri.example.com.shangri.ui.view.SwipeLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/tv_slide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_del"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#ddba69"
                android:clickable="true"
                android:gravity="center"
                android:text="离职"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <shangri.example.com.shangri.ui.view.MyScrollview
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_dianji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="19dp"
                android:paddingTop="16dp"
                android:paddingRight="21dp"
                android:paddingBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <shangri.example.com.shangri.ui.view.CircleImageView
                        android:id="@+id/im_photo"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/bg_touxiang" />


                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/im_photo"
                        android:text="主播姓名" />

                    <TextView
                        android:id="@+id/tv_id"
                        style="@style/color_999999_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/im_photo"
                        android:text="ID: 3215469875ID: 3215469875ID: 3215469875ID: 3215469875"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxEms="22"
                        android:layout_marginRight="22dp"
                        />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/color_999999_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="18:60" />

                    <TextView
                        android:id="@+id/tv_noread_number"
                        style="@style/color_white_10"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_below="@+id/tv_time"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/selector_red_bg"
                        android:gravity="center"
                        android:text="12" />

                </RelativeLayout>
            </LinearLayout>
        </shangri.example.com.shangri.ui.view.MyScrollview>
    </shangri.example.com.shangri.ui.view.SwipeLayout>
</LinearLayout>