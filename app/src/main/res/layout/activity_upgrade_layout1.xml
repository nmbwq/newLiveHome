<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_heise"
    android:orientation="vertical"
    tools:context=".ui.activity.GuildManagerActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/bg_color_appbar_layout_black"
        android:paddingTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/setting_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp_12"
                android:padding="10dp"
                android:src="@mipmap/ic_land_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="经纪人"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34" />

            <TextView
                android:id="@+id/iv_add_guild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="等级规则"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--福利介绍上面的界面-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#04ffffff"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="6dp"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="#edae5f" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="邀请主播注册人数"
                        android:textColor="#999999"
                        android:textSize="8sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <TextView
                        android:layout_width="6dp"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="#f3d09e" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="邀请主播上传简历人数"
                        android:textColor="#999999"
                        android:textSize="8sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <!--折线图上面头像布局-->
                        <LinearLayout
                            android:id="@+id/ll_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="58dp"
                            android:layout_marginTop="103dp"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <RelativeLayout
                                android:layout_width="35dp"
                                android:layout_height="36dp"
                                android:background="@mipmap/yjr_txk"
                                android:padding="1dp">

                                <shangri.example.com.shangri.ui.view.CircleImageView
                                    android:id="@+id/my_photo"
                                    android:layout_width="34dp"
                                    android:layout_height="31dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="2dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/bg_touxiang" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/yuan3" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_image1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:layout_marginTop="55dp"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <RelativeLayout
                                android:layout_width="35dp"
                                android:layout_height="36dp"
                                android:background="@mipmap/yjr_txk"
                                android:padding="1dp">

                                <shangri.example.com.shangri.ui.view.CircleImageView
                                    android:id="@+id/my_photo1"
                                    android:layout_width="34dp"
                                    android:layout_height="31dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="2dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/bg_touxiang" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/yuan3" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_image2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="260dp"
                            android:layout_marginTop="7dp"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <RelativeLayout
                                android:layout_width="35dp"
                                android:layout_height="36dp"
                                android:background="@mipmap/yjr_txk"
                                android:padding="1dp">

                                <shangri.example.com.shangri.ui.view.CircleImageView
                                    android:id="@+id/my_photo2"
                                    android:layout_width="34dp"
                                    android:layout_height="31dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="4dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/bg_touxiang" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/yuan3" />

                        </LinearLayout>


                        <!--下面时折线图的布局-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="29dp"
                            android:background="@mipmap/yjr_ssx"
                            android:orientation="horizontal"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/ll_type_text"
                                android:layout_marginLeft="5dp"
                                android:text="0"
                                android:textColor="#999999"
                                android:textSize="10sp" />


                            <shangri.example.com.shangri.ui.view.VerticalProgressBar
                                android:id="@+id/progress_resume"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="11dp"
                                android:layout_height="19dp"
                                android:layout_above="@+id/ll_type_text"
                                android:layout_marginLeft="65dp"
                                android:indeterminate="false"
                                android:progressDrawable="@drawable/progressbar_shade2" />

                            <TextView
                                android:id="@+id/tv_resume_sum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/progress_resume"
                                android:layout_marginLeft="67dp"
                                android:layout_marginBottom="6dp"
                                android:text="0"
                                android:textColor="#999999"
                                android:textSize="10sp" />

                            <shangri.example.com.shangri.ui.view.VerticalProgressBar
                                android:id="@+id/progress_register"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="11dp"
                                android:layout_height="31dp"
                                android:layout_above="@+id/ll_type_text"
                                android:layout_marginLeft="85dp"
                                android:indeterminate="false"
                                android:progressDrawable="@drawable/progressbar_shade3" />

                            <TextView
                                android:id="@+id/tv_register_sum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/progress_register"
                                android:layout_marginLeft="87dp"
                                android:layout_marginBottom="6dp"
                                android:text="0"
                                android:textColor="#999999"
                                android:textSize="10sp" />


                            <shangri.example.com.shangri.ui.view.VerticalProgressBar
                                android:id="@+id/progress_resume1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="11dp"
                                android:layout_height="56dp"
                                android:layout_above="@+id/ll_type_text"
                                android:layout_marginLeft="70dp"
                                android:layout_toRightOf="@+id/progress_register"
                                android:indeterminate="false"
                                android:progressDrawable="@drawable/progressbar_shade2" />

                            <TextView
                                android:id="@+id/tv_resume_sum1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/progress_resume1"
                                android:layout_marginLeft="72dp"
                                android:layout_marginBottom="6dp"
                                android:layout_toRightOf="@+id/progress_register"
                                android:text="0"
                                android:textColor="#999999"
                                android:textSize="10sp" />


                            <shangri.example.com.shangri.ui.view.VerticalProgressBar
                                android:id="@+id/progress_register1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="11dp"
                                android:layout_height="80dp"
                                android:layout_above="@+id/ll_type_text"
                                android:layout_marginLeft="90dp"
                                android:layout_toRightOf="@+id/progress_register"
                                android:indeterminate="false"
                                android:progressDrawable="@drawable/progressbar_shade3" />

                            <TextView
                                android:id="@+id/tv_register_sum1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/progress_register1"
                                android:layout_marginLeft="92dp"
                                android:layout_marginBottom="6dp"
                                android:layout_toRightOf="@+id/progress_register"
                                android:text="0"
                                android:textColor="#999999"
                                android:textSize="10sp" />


                            <shangri.example.com.shangri.ui.view.VerticalProgressBar
                                android:id="@+id/progress_resume2"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="11dp"
                                android:layout_height="72dp"
                                android:layout_above="@+id/ll_type_text"
                                android:layout_marginLeft="70dp"
                                android:layout_toRightOf="@+id/progress_register1"
                                android:indeterminate="false"
                                android:progressDrawable="@drawable/progressbar_shade2" />

                            <TextView
                                android:id="@+id/tv_resume_sum2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/progress_resume2"
                                android:layout_marginLeft="72dp"
                                android:layout_marginBottom="6dp"
                                android:layout_toRightOf="@+id/progress_register1"
                                android:text="0"
                                android:textColor="#999999"
                                android:textSize="10sp" />


                            <shangri.example.com.shangri.ui.view.VerticalProgressBar
                                android:id="@+id/progress_register2"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="11dp"
                                android:layout_height="118dp"
                                android:layout_above="@+id/ll_type_text"
                                android:layout_marginLeft="90dp"
                                android:layout_toRightOf="@+id/progress_register1"
                                android:indeterminate="false"
                                android:progressDrawable="@drawable/progressbar_shade3" />

                            <TextView
                                android:id="@+id/tv_register_sum2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/progress_register2"
                                android:layout_marginLeft="92dp"
                                android:layout_marginBottom="6dp"
                                android:layout_toRightOf="@+id/progress_register1"
                                android:text="0"
                                android:textColor="#999999"
                                android:textSize="10sp" />

                            <LinearLayout
                                android:id="@+id/ll_type_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="主播"
                                    android:textColor="#dfbd8c"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:text="初级经纪人"
                                    android:textColor="#dfbd8c"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"
                                    android:text="中级经纪人"
                                    android:textColor="#dfbd8c"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"
                                    android:text="高级经纪人"
                                    android:textColor="#dfbd8c"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_message"
                    style="@style/color_999999_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center_horizontal"
                    android:text="太棒了！再邀请5人并有3人上传简历即可升级，。快去邀请吧！" />


                <TextView
                    android:id="@+id/tv_commit"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_margin="30dp"
                    android:background="@drawable/bottom_select"
                    android:gravity="center"
                    android:text="立即邀请"
                    android:textColor="#d0a76c"
                    android:textSize="17dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@mipmap/gsjs_dian"
                    android:drawablePadding="10dp"
                    android:text="福利介绍"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_partol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/color_dialog_commit_shape19" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>