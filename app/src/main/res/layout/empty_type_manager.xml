<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/color_dialog_cancle_shape4">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:src="@mipmap/ic_jiaobiao2" />

        <TextView
            android:id="@+id/tv2_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="30dp"
            android:text="绑定公会"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_no_1"
            style="@style/color_999999_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2_manager"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="15dp"
            android:text="解锁更多专属服务，助你提升直播业绩"
 />

        <TextView
            android:id="@+id/tv_platfrom_ident_manager"
            style="@style/color_white_15"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:layout_below="@+id/tv_no_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/color_dialog_commit_shape1"
            android:gravity="center"
            android:text="我要加入" />

    </RelativeLayout>


</RelativeLayout>
