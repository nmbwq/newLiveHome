<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_heise"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        theme="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/bg_color_appbar_layout_black">

            <ImageView
                android:id="@+id/left_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="25dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_land_back" />

            <ImageView
                android:id="@+id/right_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_title_patol"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:visibility="invisible"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="20dp"
                android:src="@mipmap/ic_wodedelete"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_title_patol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="收录新直播平台"
                android:textColor="@color/white"
                android:textSize="16sp"

                />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/bg_juxing"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_nick_name"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="直播平台名称："
                android:textColor="@color/white" />


            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:padding="15dp"
                android:src="@mipmap/more_unfold2" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv1"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入或选择直播平台"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text_color_little_black"
                android:textSize="13sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_color_little_dark_gray" />

        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="公会名称："
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv2"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入公会名称"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text_color_little_black"
                android:textSize="13sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_color_little_dark_gray" />

        <RelativeLayout
            android:id="@+id/rl_autograph"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_pingtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="直播平台ID："
                android:textColor="@color/white" />


            <EditText
                android:id="@+id/et3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv2"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入直播平台ID"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text_color_little_black"
                android:textSize="13sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_color_little_dark_gray" />

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">


            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="封面:"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/tv1"
                android:text="给这个直播平台添加个特殊封面吧！"
                android:textColor="@color/text_color_little_black"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/mine_profile_image"
                android:layout_width="105dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_moren"
                    android:text="点击上传" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_shangchuan"
                    android:text="点击上传"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/login_in"
        android:layout_width="304dp"
        android:layout_height="45dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/bottom_select"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="确定"
        android:textColor="@color/white" />
</LinearLayout>