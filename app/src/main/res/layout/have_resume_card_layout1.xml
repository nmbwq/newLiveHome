<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mengban_1"
    android:paddingTop="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="40dp">

        <ScrollView
            android:id="@+id/sc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/im_photo"
                    android:layout_width="match_parent"
                    android:layout_height="488dp"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/im_photo"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cancle"
                        android:layout_width="87dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="30dp"
                        android:background="@mipmap/bg_kuang2"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="#cf9a57"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_next"
                        style="@style/color_white_14"
                        android:layout_width="87dp"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:background="@mipmap/bg_kuang1"
                        android:gravity="center"
                        android:text="立即申请" />


                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>


</RelativeLayout>
