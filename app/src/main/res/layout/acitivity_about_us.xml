<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_heise"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/bg_color_appbar_layout_black">

                <ImageView
                    android:id="@+id/aboutus_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:src="@mipmap/ic_land_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:gravity="center_vertical"
                    android:text="@string/about_us"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_34" />
            </RelativeLayout>

            <ImageView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@mipmap/logon_icon" />

            <TextView
                android:id="@+id/tv_Versions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="版本号"
                android:textColor="@color/text_color_light_black"
                android:textSize="@dimen/text_size_24" />


            <TextView
                style="@style/color_999999_15"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:paddingLeft="22dp"
                android:text="简介"></TextView>

            <TextView
                android:id="@+id/tv_des"
                style="@style/color_white_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_04ffffff"
                android:paddingLeft="22dp"
                android:paddingTop="15dp"
                android:paddingRight="22dp"
                android:paddingBottom="15dp"
                android:text="直播之家专为主播经纪公司（公会）打造的智能移动办公平台。我们的目的是帮助每一个运营人员提高管理效率，帮助公会长能够随时随地掌控公会动向，帮助主播业绩翻倍增长。" />

            <TextView
                style="@style/color_999999_15"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingLeft="22dp"
                android:text="联系我们"></TextView>

            <TextView
                android:id="@+id/tv_wx_gzh"
                style="@style/color_white_14"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="1dp"
                android:background="@color/bg_04ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="22dp"
                android:text="微信公众号：直播之家" />

            <TextView
                android:id="@+id/tv_wx"
                style="@style/color_white_14"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="1dp"
                android:background="@color/bg_04ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="22dp"
                android:text="客服微信号：zhibozhijia888" />

            <TextView
                android:id="@+id/tv_email"
                style="@style/color_white_14"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="1dp"
                android:background="@color/bg_04ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="22dp"
                android:text="咨询邮箱：3367795295@qq.com" />

            <TextView
                android:id="@+id/tv_tel"
                style="@style/color_white_14"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="1dp"
                android:background="@color/bg_04ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="22dp"
                android:text="客服热线：0571-87081736" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>