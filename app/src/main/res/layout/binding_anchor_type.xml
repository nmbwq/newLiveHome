<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_heise">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/bg_color_appbar_layout_black"
        android:paddingTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/setting_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp_12"
                android:padding="10dp"
                android:src="@mipmap/ic_land_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/binging_guild"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34" />


        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_fast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/color_dialog_cancle_shape4">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="28dp"
                    android:src="@mipmap/ic_kuaisu" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="30dp"
                    android:text="主播绑定"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_no_1"
                    style="@style/color_999999_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="15dp"
                    android:text="主播完成主播绑定，可查看直播数据！" />


                <TextView
                    android:id="@+id/tv_no_2"
                    style="@style/color_666666_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_no_1"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="15dp"
                    android:text="直播数据包括：每日直播收益，开播时长，粉丝榜单，智
能分析粉丝增长及所在平台的综合排名分析等等" />

                <TextView
                    android:id="@+id/tv_fast_ident"
                    style="@style/color_white_15"
                    android:layout_width="160dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/tv_no_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/color_dialog_commit_shape1"
                    android:gravity="center"
                    android:text="我要绑定" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_normal"
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/color_dialog_cancle_shape4"

                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="28dp"
                    android:src="@mipmap/ic_jiaobiao2" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="30dp"
                    android:text="加入公会"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    style="@style/color_999999_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv2"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="15dp"
                    android:text="解锁更多专属服务，助你提升直播业绩" />


                <TextView
                    android:id="@+id/tv_platfrom_ident"
                    style="@style/color_white_15"
                    android:layout_width="160dp"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/color_dialog_commit_shape1"
                    android:gravity="center"
                    android:text="我要加入" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_support_platfrom"
                style="@style/color_d0a76c_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="查看支持平台" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
