<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#04ffffff"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#30000000"
            android:orientation="vertical"></LinearLayout>

        <shangri.example.com.shangri.ui.view.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_touxiang" />
    </RelativeLayout>
    <!--</FrameLayout>-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="花椒"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_income_name"
                style="@style/tv_income_team"
                android:text="辅导次数" />

            <ImageView
                android:id="@+id/iv_wenti_tutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:padding="3dp"
                android:src="@mipmap/wenti" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tutor_count"
            style="@style/tv_income_team_2"
            android:drawableRight="@mipmap/shangshen"
            android:text="900,000" />

        <TextView
            android:id="@+id/tv_tutor_pre_count"
            style="@style/tv_income_team"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_12"
            android:text="前日:5000" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/tv_income_team"
                android:text="辅导主播数" />

            <ImageView
                android:id="@+id/iv_wenti_kaibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:padding="3dp"
                android:src="@mipmap/wenti" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_host_count"
            style="@style/tv_income_team_2"
            android:drawableRight="@mipmap/shangshen"
            android:text="900,000" />

        <TextView
            android:id="@+id/tv_host_pre_count"
            style="@style/tv_income_team"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_9"
            android:text="前日:5000," />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#201b1b1b" />

        <RelativeLayout
            android:id="@+id/rl_click"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/mingxi" />

                <TextView
                    style="@style/color_999999_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="查看明细" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>