<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_news_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/pingtai_juxing"
                android:orientation="vertical">

                <TextView
                    style="@style/color_white_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/biaoqian"
                    android:padding="5dp"
                    android:text="最具潜力"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/im_image"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/logon_icon" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/color_white_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="花椒直播" />

                <TextView
                    android:id="@+id/tv_info"
                    style="@style/color_999999_11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="最大的具有明星属
性的移动社交平台" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_symbol"
                style="@style/color_white_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@mipmap/biaoqian"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:text="最具潜力" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>