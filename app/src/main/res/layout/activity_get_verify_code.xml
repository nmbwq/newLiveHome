<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing_denglu"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:src="@mipmap/ic_land_back" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/title_get_code"
        android:textColor="#ffffff"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="验证码短信已发送到"
        android:textColor="@color/bg_color_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="+18 123456"
        android:textColor="@color/bg_color_white"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="304dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@mipmap/dl_srk">


        <EditText
            android:id="@+id/register_pass"
            android:layout_width="304dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="31dp"
            android:textColor="@color/white"
            android:textColorHint="#40ffffff"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/register_send_sms"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"

            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/reget_code"
            android:textColor="#d0a76c"
            android:textSize="14dp" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/register_next"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginTop="91dp"
        android:src="@mipmap/dl_wxyb" />

</LinearLayout>