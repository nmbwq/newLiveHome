<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_onclik"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="#04ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/gonghui_renzheng" />


        <shangri.example.com.shangri.ui.view.RoundImageView
            android:id="@+id/im_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/im_type"
            android:src="@mipmap/icon_huizhang2" />

        <TextView
            android:id="@+id/tv_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/im_icon"
            android:text="猫咪-菠萝街"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/im_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_state"
            android:src="@mipmap/tongguo"

            />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:text="审核通过"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_renzhegn"
            style="@style/color_white_12"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/color_dialog_commit_shape1"
            android:gravity="center"
            android:text="重新验证"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#04ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_point"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/my_guild_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@id/iv_pass"
                android:text="系数：0.6"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/im_update"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:src="@mipmap/ic_wobianji" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_refuse_text"
            style="@style/color_white_12"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_point"
            android:layout_marginLeft="22dp"
            android:gravity="center_vertical"
            android:text="审核失败原因：您的信息有误，请核实。" />

    </RelativeLayout>

</LinearLayout>