<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wu_beijing"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#04ffffff"
                android:paddingTop="25dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp24"
                    android:layout_gravity="center_horizontal">

                    <com.flyco.tablayout.SegmentTabLayout
                        android:id="@+id/tl1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp24"
                        android:layout_gravity="center"
                        app:tl_bar_stroke_color="#D3A35C"
                        app:tl_indicator_color="#D3A35C"
                        app:tl_indicator_corner_radius="@dimen/dp_2"
                        app:tl_tab_padding="@dimen/dp_20"
                        app:tl_textsize="15sp" />

                    <com.flyco.tablayout.SegmentTabLayout
                        android:id="@+id/tl2"
                        android:layout_width="97dp"
                        android:layout_height="@dimen/dp24"
                        android:layout_gravity="center"
                        android:background="@drawable/corner_radius_6"
                        android:padding="@dimen/dp_2"
                        android:visibility="gone"
                        app:tl_bar_stroke_color="#D3A35C"
                        app:tl_indicator_color="#D3A35C"
                        app:tl_indicator_corner_radius="@dimen/dp_2"
                        app:tl_textsize="15sp" />
                </FrameLayout>


                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/shuju3" />
            </FrameLayout>


            <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/vp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1" />-->
            <FrameLayout
                android:id="@+id/fl_change"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_weight="1" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>