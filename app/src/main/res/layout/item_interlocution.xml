<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/bg_juxing"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@mipmap/ic_survey" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="      下播下播下播下播下播下播下播下播下播下播下播"
            android:textColor="@color/white"
            android:lineSpacingExtra="2dp"
            android:textSize="14sp" />

        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-12"
            android:gravity="left"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/text_color_little_black"
            android:drawableLeft="@mipmap/ic_zx_pageview"
            android:drawablePadding="10dp"
            android:textSize="11sp" />
            </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_color_little_black"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_little_black"
                android:gravity="center"
                android:drawableLeft="@mipmap/wenda_shoucang1"
                android:textSize="11sp"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:text="55796" />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_color_little_black"

            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_charm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_little_black"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_youyong1"
            android:textSize="11sp"
            android:padding="5dp"
            android:drawablePadding="10dp"
            android:text="55796" />
            </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_color_little_black"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_Fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_little_black"
            android:drawableLeft="@mipmap/ic_meiyong1"
            android:gravity="right"
            android:textSize="11sp"
            android:padding="5dp"
            android:drawablePadding="10dp"
            android:text="1325555555" />
            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_contetn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@mipmap/da" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下播下播下播下播下播下播下播下播下播下播下播下播下播下播下播下播"
            android:textColor="@color/white"
            android:lineSpacingExtra="2dp"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_buttom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e3be84"
            android:textSize="11sp"
            android:padding="10dp"
            android:text="查看答案" />
    </LinearLayout>
</LinearLayout>