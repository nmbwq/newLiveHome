<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_heise">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_appbar_layout_black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/setting_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:src="@mipmap/ic_land_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="@dimen/dp_12"
                android:gravity="center_vertical"
                android:text="签约直通车"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34" />


            <ImageView
                android:id="@+id/web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:src="@mipmap/qianyue_wenhao" />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">


        <include
            android:id="@+id/layout_network_break"
            layout="@layout/layout_network_break"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/rl_net_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/head_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="171dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginBottom="10dp"
                    android:background="@mipmap/xuanze_zhixingren"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="21dp"
                    android:paddingRight="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/im1"
                            android:layout_width="19dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="20dp"
                            android:src="@mipmap/hetong" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/im1"
                            android:text="我的合同" />


                        <ImageView
                            android:id="@+id/im2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:src="@mipmap/shuangjiantou" />


                        <TextView
                            android:id="@+id/tv_more"
                            style="@style/color_d0a76c_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/im2"
                            android:paddingRight="10dp"
                            android:text="查看全部" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_finish_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="20"
                                android:textColor="#fefefe"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="15dp"
                                android:text="已完成"
                                android:textColor="#999999"

                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:background="#666666" />

                        <LinearLayout
                            android:id="@+id/ll2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="20"
                                android:textColor="#fefefe"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="15dp"
                                android:text="已完成"
                                android:textColor="#999999"

                                android:textSize="14sp" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_dianji"
                style="@style/color_white_12"
                android:layout_width="175dp"
                android:layout_height="52dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:background="@mipmap/qianyue_tuan"
                android:gravity="center_vertical"
                android:paddingLeft="17dp"
                android:paddingTop="5dp"
                android:paddingRight="17dp"
                android:paddingBottom="3dp"
                android:text="30秒了解签约直通车使用流程！" />


            <RelativeLayout
                android:id="@+id/rl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head_info">


                <!--主播的布局-->
                <LinearLayout
                    android:id="@+id/ll_anchor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#04ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="19dp"
                    android:paddingRight="21dp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/rl_anchor_my_identification"
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <ImageView
                            android:id="@+id/im3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/shiming_renzhneg" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/im3"
                            android:text="实名认证" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_anchor_renzheng_type"
                                style="@style/color_999999_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_toLeftOf="@+id/im4"
                                android:text="未认证" />

                            <ImageView
                                android:id="@+id/im4"
                                android:layout_width="10dp"
                                android:layout_height="12dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/ic_wd_more" />

                        </LinearLayout>


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/rl_anchor_qianzhang"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#1a1a1a"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/im5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/qianzhang2" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/im5"
                            android:text="我的签章" />


                        <ImageView
                            android:id="@+id/im6"
                            android:layout_width="10dp"
                            android:layout_height="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_wd_more" />

                    </RelativeLayout>


                </LinearLayout>


                <!--会长的布局-->
                <LinearLayout
                    android:id="@+id/ll_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#04ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="19dp"
                    android:paddingRight="21dp">


                    <RelativeLayout
                        android:id="@+id/rl_moban"
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <ImageView
                            android:id="@+id/im9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/moban" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/im9"
                            android:text="模板签署" />


                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_wd_more" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#181818" />

                    <RelativeLayout
                        android:id="@+id/rl_company_identification"
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <ImageView
                            android:id="@+id/im7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/shiming_renzhneg" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/im7"
                            android:text="企业认证" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_manager_renzheng_type"
                                style="@style/color_999999_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_toLeftOf="@+id/im8"
                                android:text="未认证" />

                            <ImageView
                                android:id="@+id/im8"
                                android:layout_width="10dp"
                                android:layout_height="12dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/ic_wd_more" />

                        </LinearLayout>
                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#181818" />


                    <RelativeLayout
                        android:id="@+id/rl_manager_qianzhang"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/im10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/qianzhang2" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/im10"
                            android:text="我的签章" />


                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_wd_more" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#181818"
                        android:visibility="gone" />


                    <RelativeLayout
                        android:id="@+id/rl_manager_taocan"
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <ImageView
                            android:id="@+id/im11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/taocan" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/im11"
                            android:text="我的套餐" />


                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_wd_more" />

                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>


            <TextView
                android:id="@+id/user_login"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_below="@id/rl_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/bottom_select"
                android:gravity="center"
                android:text="一键签署"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/ll_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    style="@style/color_999999_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签署即代表您同意该" />

                <TextView
                    style="@style/color_d0a76c_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《服务协议》" />
            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
