<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_jianli_time"
            style="@style/color_999999_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="昨天：12:30" />

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_jianli_time"
            android:layout_marginTop="20dp">

            <shangri.example.com.shangri.ui.view.CircleImageView
                android:id="@+id/my_jinli_photo1"
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_touxiang" />


            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/im_jianli_sanjiao1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/qp_bai" />

                <TextView
                    android:id="@+id/tv_jianli_alertmessage"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/color_dialog_commit_shape2"
                    android:paddingLeft="15dp"
                    android:paddingTop="12dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="9dp"
                    android:text="您好，我觉得你很符合我们公司的职位，现在想获取一份你的简历。"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/im_jianli_sanjiao2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/qp_huang" />
            </LinearLayout>

            <shangri.example.com.shangri.ui.view.CircleImageView
                android:id="@+id/my_jianli_photo2"
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_touxiang" />

            <TextView
                android:id="@+id/tv_jianli_isreade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_info"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="52dp"
                android:text="已读"
                android:textColor="#999999"
                android:textSize="10sp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="151dp"
            android:layout_height="146dp"
            android:layout_below="@+id/rl_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@mipmap/bg_touxiang">


            <ImageView
                android:id="@+id/rl_jinli_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_touxiang" />

            <TextView
                android:id="@+id/tv_jianli_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/ltdh_jld"
                android:gravity="center"
                android:text="悟空"
                android:textColor="#333333"
                android:textSize="14sp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_jianli_text"
            style="@style/color_999999_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/color_dialog_commit_shape32"
            android:padding="10dp"
            android:text="对方成功向您发送了简历" />


    </RelativeLayout>

</RelativeLayout>