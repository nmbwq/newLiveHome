<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/layout_network_break"
                layout="@layout/layout_network_break"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/rl_net_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/fl_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <!--<shangri.example.com.shangri.ui.view.SpringView-->
                    <!--android:id="@+id/sv_partol"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_below="@+id/rl_serch"-->
                    <!--android:orientation="vertical">-->

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!--</shangri.example.com.shangri.ui.view.SpringView>-->


                    <ImageView
                        android:id="@+id/iv_share_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />


                    <LinearLayout
                        android:id="@+id/rl_empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <include
                                android:id="@+id/empty_type_anchor"
                                layout="@layout/empty_type_anchor"
                                android:visibility="gone" />

                            <include
                                android:id="@+id/empty_type_chairman"
                                layout="@layout/empty_type_chairman"
                                android:visibility="gone" />

                            <include
                                android:id="@+id/empty_type_manager"
                                layout="@layout/empty_type_manager"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_support_platfrom"
                            style="@style/color_d0a76c_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="查看支持平台"
                            android:visibility="gone" />

                    </LinearLayout>


                </RelativeLayout>

                <include
                    android:id="@+id/activity_guoqi_layout"
                    layout="@layout/activity_guoqi_layout"
                    android:visibility="gone" />

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>
</LinearLayout>