<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/platform_tips_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/ic_zxxx_notice" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_29"
        android:layout_marginRight="@dimen/px_31"
        android:layout_toRightOf="@id/platform_tips_icon"
        android:orientation="vertical">


        <TextView
            android:id="@+id/platform_tips_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_middle_black"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:id="@+id/platform_tips_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/px_13"
            android:textColor="@color/text_color_light_black"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:id="@+id/platform_tips_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/corner_radius_bg_light_gray_5"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_5"
            android:maxLines="2"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/px_33"
            android:textColor="@color/text_color_little_black"
            android:textSize="@dimen/text_size_26" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@color/divider_color_horizontal" />
    </LinearLayout>


</RelativeLayout>