<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <shangri.example.com.shangri.ui.view.SwipeLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/tv_slide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/tv_zhiding"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#666666"
                android:gravity="center"
                android:text="解绑"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_del"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#ddba69"
                android:clickable="true"
                android:gravity="center"
                android:text="离职"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>


        <shangri.example.com.shangri.ui.view.MyScrollview
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_dianji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <shangri.example.com.shangri.ui.view.CircleImageView
                        android:id="@+id/im_photo"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/bg_touxiang" />


                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/color_white_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/im_photo"
                        android:text="主播姓名" />

                    <TextView
                        android:id="@+id/tv_id"
                        style="@style/color_white_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/im_photo"
                        android:text="ID: 3215469875"
                        android:visibility="gone" />


                    <TextView
                        style="@style/color_999999_13"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="管理员" />

                </RelativeLayout>
            </LinearLayout>
        </shangri.example.com.shangri.ui.view.MyScrollview>

    </shangri.example.com.shangri.ui.view.SwipeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#401b1b1b" />


    <LinearLayout
        android:id="@+id/ll_hight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <shangri.example.com.shangri.swipeMenuListView.SwipeMenuListView
            android:id="@+id/rv_anchor_partol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_id" />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#401b1b1b" />
</LinearLayout>