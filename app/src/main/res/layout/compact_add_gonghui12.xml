<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mengban_1"
    android:paddingLeft="37dp"
    android:paddingRight="37dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <LinearLayout
            android:id="@+id/ll_text"
            android:layout_width="match_parent"
            android:layout_height="209dp"
            android:layout_below="@+id/im_delete"
            android:background="@drawable/color_dialog_cancle_shape16"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="25dp"
            android:paddingRight="30dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="交换微信"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:background="@null"
                android:hint="请输入你的微信号"
                android:paddingLeft="13dp"
                android:textColor="#ffffff"
                android:textColorHint="#666666"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_cancle"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@mipmap/bg_kuang2"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#cf9a57"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_next"
                    style="@style/color_white_14"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@mipmap/bg_kuang1"
                    android:gravity="center"
                    android:text="确认" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginRight="17dp"
            android:src="@mipmap/jhwxpop"
            android:padding="5dp"
            android:visibility="gone"
            />
    </RelativeLayout>

</RelativeLayout>
