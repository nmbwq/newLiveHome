<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#04ffffff"
        android:orientation="vertical"
        android:paddingLeft="19dp"
        android:paddingTop="15dp"
        android:paddingRight="19dp"
        android:paddingBottom="15dp">


        <ImageView
            android:id="@+id/im_photo"
            android:layout_width="58dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_touxiang" />


        <TextView
            android:id="@+id/tv_name"
            style="@style/color_white_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/im_photo"
            android:text="直播小边" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/im_photo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_company_number"
                style="@style/color_999999_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/color_dialog_commit_shape40"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:text="规模：1000人以下" />

            <TextView
                android:id="@+id/tv_anchor_number"
                style="@style/color_999999_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/color_dialog_commit_shape40"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:text="规模：1000人以下" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_number"
            style="@style/color_white_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:text="+10" />


        <TextView
            android:id="@+id/tv_time"
            style="@style/color_999999_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_number"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="2012-12-12" />

    </RelativeLayout>

</RelativeLayout>