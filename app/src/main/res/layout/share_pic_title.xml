<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginTop="@dimen/dp_43"
    tools:showIn="@layout/layout_share_pic_zhubo">

    <LinearLayout
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="88dp"
        android:background="@mipmap/biaotidi"
        android:orientation="horizontal">

        <TextView
            android:paddingRight="@dimen/dp25"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_4"
            android:text="一直播（XX工会）"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="一直播（XX工会）"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>


    <shangri.example.com.shangri.ui.view.CircleImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="56dp"
        android:background="@mipmap/touxiangquan"
        android:padding="2dp" />
</RelativeLayout>

    