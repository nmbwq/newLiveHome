<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_white"
    android:orientation="vertical">
    <!--android:background="@drawable/corner_bg_white_top_radius_5"-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@drawable/corner_bg_white_top_radius_5">

        <ImageView
            android:id="@+id/video_news_thumb"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="@drawable/corner_bg_white_top_radius_5"
            android:scaleType="centerCrop"
            android:src="@mipmap/jiazaitu_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="@dimen/dp_4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_9"
                android:layout_marginLeft="@dimen/px_15"
                android:src="@mipmap/liulan"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/video_news_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_7"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_20" />

        </LinearLayout>

    </FrameLayout>


    <TextView
        android:id="@+id/video_news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_white"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/px_3"
        android:lines="2"
        android:maxLines="2"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_6"
        android:textColor="@color/text_color_middle_black"
        android:textSize="@dimen/text_size_24" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8">


            <!--<TextView
                android:id="@+id/video_news_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/ic_zx_pageview"
                android:drawablePadding="@dimen/px_5"
                android:text="0"
                android:textColor="@color/text_color_light_black"
                android:textSize="@dimen/text_size_24" />

            <View
                android:id="@+id/video_news_divider"
                android:layout_width="@dimen/px_1"
                android:layout_height="@dimen/px_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_11"
                android:layout_marginRight="@dimen/px_13"
                android:layout_toRightOf="@id/video_news_view_count"
                android:background="@color/divider_color_vertical" />-->
            <!--android:layout_toRightOf="@id/video_news_divider"-->
            <TextView
                android:id="@+id/video_news_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/text_color_light_black"
                android:textSize="@dimen/text_size_20" />

            <LinearLayout
                android:id="@+id/video_news_like_bg"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/video_news_like_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_gongbao2" />

                <TextView
                    android:id="@+id/video_news_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/text_color_light_yellow"
                    android:textSize="@dimen/text_size_22" />

            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/addOne_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:gravity="top"
            android:paddingRight="@dimen/dp_8"
            android:text="+1"
            android:textColor="@color/text_color_light_yellow"
            android:textSize="@dimen/dp_13"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_21"
        android:background="@color/bg_color_gray" />

</LinearLayout>