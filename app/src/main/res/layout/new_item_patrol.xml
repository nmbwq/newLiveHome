<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@mipmap/bg_juxing"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingTop="15dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <shangri.example.com.shangri.ui.view.CircleImageView
                android:id="@+id/im_photo"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@mipmap/bg_touxiang"
                />


            <TextView
                android:id="@+id/tv_name"
                style="@style/color_white_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/im_photo"
                android:text="花湖" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_read_number"
                    style="@style/color_999999_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="已读1/1" />
                <TextView
                    android:id="@+id/tv_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="32122"
                    />
            </LinearLayout>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/im1"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_gognhui_name"
                style="@style/color_white_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/im1"
                android:text="公会名称" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/im2"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/color_999999_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/im2"
                android:text="辅导日期" />

            <TextView
                android:id="@+id/tv_type"
                style="@style/color_d0a76c_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv2"
                android:text="我" />

            <TextView
                android:id="@+id/tv2"
                style="@style/color_white_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="发出" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
