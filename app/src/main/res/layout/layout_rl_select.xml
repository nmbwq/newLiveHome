<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@mipmap/mengban_1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im_show"
            android:layout_width="120dp"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@mipmap/woyao_fabu"
            android:layout_marginBottom="50dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="110dp"
            android:layout_marginRight="20dp"
           >

            <RelativeLayout
                android:id="@+id/rl_up"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rl_down"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/im1"
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/fudao" />

                <TextView
                    style="@style/color_white_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/im1"
                    android:text="发布辅导" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_down"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/im2"
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/renwu" />

                <TextView
                    style="@style/color_white_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/im2"
                    android:text="发布任务" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>