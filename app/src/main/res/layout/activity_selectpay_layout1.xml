<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_heise">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color_appbar_layout_black">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp">

                    <ImageView
                        android:id="@+id/setting_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="32dp"
                        android:paddingRight="@dimen/dp_15"
                        android:src="@mipmap/ic_land_back" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:gravity="center_vertical"
                        android:text="购买次数"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_34" />

                    <TextView
                        android:id="@+id/detail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:padding="@dimen/dp_12"
                        android:text="明细"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone"
                        />
                </RelativeLayout>
            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/appbar"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginBottom="11dp"
                    android:background="@mipmap/xuanze_zhixingren"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/rl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="22dp">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@mipmap/biaozun_taocan2" />

                        <TextView
                            style="@style/color_white_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="标准套餐" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="22dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="￥"
                            android:textColor="#d0a76c"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="6.0"
                            android:textColor="#d0a76c"
                            android:textSize="35sp" />

                        <TextView
                            style="@style/color_white_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="/3次" />

                    </LinearLayout>


                </RelativeLayout>


                <TextView
                    style="@style/color_white_13"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="选择支付方式" />

                <RelativeLayout
                    android:id="@+id/rl_weixin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#04ffffff"
                    android:paddingLeft="19dp"
                    android:paddingRight="19dp">

                    <ImageView
                        android:id="@+id/im_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/weixin_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/im_1"
                        android:gravity="center_vertical"
                        android:text="微信支付"
                        android:textColor="#fefefe"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/weixin_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/xuanzhong_3" />


                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />


                <RelativeLayout
                    android:id="@+id/rl_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#04ffffff"
                    android:paddingLeft="19dp"
                    android:paddingRight="19dp">

                    <ImageView
                        android:id="@+id/im_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/zhifubao_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/im_2"
                        android:gravity="center_vertical"
                        android:text="支付宝支付"
                        android:textColor="#fefefe"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/alipay_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/wei_xuanzhong" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bottom_select"
                    android:gravity="center"
                    android:text="立即充值"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>