<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_white"
        app:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/msg_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginTop="32dp"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:src="@mipmap/ic_land_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginTop="32dp"
                android:gravity="center_vertical"
                android:text="@string/msg_detail_title"
                android:textColor="@color/text_color_middle_black"
                android:textSize="@dimen/text_size_34" />
        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

    <TextView
        android:background="@color/bg_color_white"
        android:id="@+id/msg_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/dp_21"
        android:gravity="center"
        android:textColor="@color/text_color_middle_black"
        android:textSize="@dimen/text_size_30" />

    <TextView
        android:id="@+id/msg_detail_date"
        android:background="@color/bg_color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/px_33"
        android:paddingTop="@dimen/px_31"
        android:gravity="right"
        android:paddingRight="@dimen/dp_16"
        android:textColor="@color/text_color_middle_black"
        android:textSize="@dimen/text_size_30" />

    <TextView
        android:id="@+id/msg_detail_content"
        android:background="@color/bg_color_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/px_33"
        android:paddingLeft="@dimen/px_33"
        android:textColor="@color/text_color_little_black"
        android:textSize="@dimen/text_size_28" />

    <!--<com.tencent.smtt.sdk.symbolWebView
        android:id="@+id/platform_tips_content"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/corner_radius_bg_light_gray_5"
        android:isScrollContainer="false"
        android:overScrollMode="never"
        android:scrollbars="none" />-->


</LinearLayout>