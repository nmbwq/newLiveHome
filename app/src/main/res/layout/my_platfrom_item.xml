<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_news_item"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:background="@mipmap/bg_juxing"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_consulation_item"
        android:layout_width="68dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/corner_radius_5"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:src="@mipmap/jiazaitu_small" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_consulation_item"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_consultaton_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小米直播"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="搞笑家族"
            android:textColor="@color/text_color_light_black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="ID:55555555"
            android:textColor="@color/text_color_light_black"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>