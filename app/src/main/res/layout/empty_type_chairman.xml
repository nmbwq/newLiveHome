<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/color_dialog_cancle_shape4">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="28dp"
                android:src="@mipmap/ic_jiaobiao1" />

            <TextView
                android:id="@+id/tv1_chairman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="30dp"
                android:text="快速绑定公会"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_no_2"
                style="@style/color_999999_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1_chairman"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="公会进行快速绑定，可查看该公会在直播平台的主播直播综合数据" />


            <TextView
                android:id="@+id/tv_no_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_no_2"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="快速公会可自动爬取公会长所在的直播平台的主播数据
（每日直播收益，开播时长，粉丝榜单，智能分析粉丝增
长及所在平台的综合排名分析等等）"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_fast_ident_chairman"
                style="@style/color_white_15"
                android:layout_width="160dp"
                android:layout_height="32dp"
                android:layout_below="@+id/tv_no_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/color_dialog_commit_shape1"
                android:gravity="center"
                android:text="我要绑定" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/color_dialog_cancle_shape4">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="28dp"
                android:src="@mipmap/ic_jiaobiao2" />

            <TextView
                android:id="@+id/tv2_chairman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="30dp"
                android:text="平台认证公会"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_no_3"
                style="@style/color_999999_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv2_chairman"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="公会可绑定/升级认证公会，认证公会爬取的直播
数据更为精准，但是需要登录公会后台（注平台给
予公会的结算后台）" />

            <TextView

                android:id="@+id/tv_no_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_no_3"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="认证公会有快速公会的所有功能，但是数据更为精准，方
便公会直接为主播进行结算。且认证公会能享受更多平台
认证权益！"
                android:textColor="#666666"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_platfrom_ident_chairman"
                style="@style/color_white_15"
                android:layout_width="160dp"
                android:layout_height="32dp"
                android:layout_below="@+id/tv_no_4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/color_dialog_commit_shape1"
                android:gravity="center"
                android:text="我要认证" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
