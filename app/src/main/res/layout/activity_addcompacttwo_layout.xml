<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_heise"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:background="@color/bg_color_appbar_layout_black">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp">

                    <ImageView
                        android:id="@+id/setting_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_marginTop="32dp"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:src="@mipmap/ic_land_back" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_marginTop="32dp"
                        android:gravity="center_vertical"
                        android:text="填写合同信息"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_32" />

                </RelativeLayout>
            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appbar"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="#04ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="19dp"
                    android:paddingRight="22dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/xieyi" />

                    <TextView
                        style="@style/color_white_15"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="艺人网络演出合作协议" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#04ffffff"
                    android:paddingLeft="19dp"
                    android:paddingRight="18dp">

                    <TextView
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="合同名称" />


                    <ImageView
                        android:id="@+id/im_delete_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:src="@mipmap/guandiao" />

                    <EditText
                        android:id="@+id/et_compact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/im_delete_name"
                        android:background="@null"
                        android:hint="请输入合同名称"
                        android:textColor="#ffffff"
                        android:textColorHint="#999999"
                        android:textSize="14sp"
                        android:gravity="right"
                        android:maxLength="20"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <RelativeLayout
                    android:id="@+id/rl_selet_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#04ffffff"
                    android:paddingLeft="19dp"
                    android:paddingRight="22dp">

                    <TextView
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="签署截止日期" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/im2"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text="" />

                    <ImageView
                        android:id="@+id/im2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:src="@mipmap/ic_wd_more" />


                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#04ffffff"
                    android:orientation="vertical"
                    android:paddingBottom="21dp"
                    android:paddingLeft="19dp"
                    android:paddingRight="18dp"
                    android:paddingTop="16dp">


                    <TextView
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加合同签署方" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp">

                            <TextView
                                android:id="@+id/tv_name1"
                                style="@style/color_white_17"
                                android:layout_width="47dp"
                                android:layout_height="47dp"
                                android:layout_centerVertical="true"
                                android:background="@mipmap/tianxie_lianxiren"
                                android:gravity="center"
                                android:text="我" />

                            <TextView
                                android:id="@+id/tv_name2"
                                style="@style/color_white_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="想想" />

                        </RelativeLayout>


                        <ImageView
                            android:id="@+id/im_delete_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:src="@mipmap/guandiao" />

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/im_delete_phone"
                            android:background="@null"
                            android:hint="请输入签署方电话"
                            android:textColor="#ffffff"
                            android:textColorHint="#999999"
                            android:textSize="18sp"
                            android:gravity="right"
                            android:inputType="number"
                            android:maxLength="11"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#04ffffff"
                    android:orientation="vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="19dp"
                    android:paddingRight="19dp"
                    android:paddingTop="16dp">


                    <TextView
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注：" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="122dp">

                        <EditText
                            android:id="@+id/et_beizhu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@null"
                            android:gravity="left"
                            android:hint="请输入（必填）"
                            android:textColor="#ffffff"
                            android:textColorHint="#999999"
                            android:textSize="14sp"
                            android:maxLength="130"
                            />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_number"
                                style="@style/color_999999_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />

                            <TextView
                                style="@style/color_999999_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/130" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_commit"
                style="@style/color_white_17"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_below="@+id/ll_info"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/color_dialog_commit_shape1"
                android:gravity="center"
                android:text="立即签署"
                android:layout_marginBottom="70dp"
                />
        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/head"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_color_item_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_color_item_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_disms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:paddingTop="20dp"
                android:paddingLeft="30dp"
                android:textSize="16sp"
                android:text="取消" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/bg_color_little_dark_gray" />

            <TextView
                android:id="@+id/time_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingRight="30dp"
                android:gravity="right"
                android:textSize="16sp"
                android:textColor="@color/text_color_audit"
                android:text="确定" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color_item_bg"
            android:orientation="horizontal">

            <shangri.example.com.shangri.ui.view.WheelView
                android:id="@+id/dialog_year"
                style="@style/wheel_style"
                app:itemNumber="3"
                app:lineColor="@color/bg_color_little_dark_gray"
                app:maskHeight="48dp"
                app:noEmpty="true"
                app:normalTextColor="#999999"
                app:normalTextSize="11sp"
                app:selectedTextColor="#FFFFFF"
                app:selectedTextSize="13sp"
                app:unitHeight="50dp" />

            <shangri.example.com.shangri.ui.view.WheelView
                android:id="@+id/dialog_month"
                style="@style/wheel_style"
                app:itemNumber="3"
                app:lineColor="@color/bg_color_little_dark_gray"
                app:maskHeight="48dp"
                app:noEmpty="true"
                app:normalTextColor="#999999"
                app:normalTextSize="11sp"
                app:selectedTextColor="#FFFFFFFF"
                app:selectedTextSize="11sp"
                app:unitHeight="50dp" />

            <shangri.example.com.shangri.ui.view.WheelView
                android:id="@+id/dialog_data"
                app:itemNumber="3"
                app:lineColor="@color/bg_color_little_dark_gray"
                app:maskHeight="48dp"
                app:noEmpty="true"
                app:normalTextColor="#999999"
                app:normalTextSize="11sp"
                app:selectedTextColor="#FFFFFFFF"
                app:selectedTextSize="11sp"
                app:unitHeight="50dp"
                style="@style/wheel_style" />

            <shangri.example.com.shangri.ui.view.WheelView
                android:id="@+id/dialog_data1"
                app:itemNumber="3"
                app:lineColor="@color/bg_color_little_dark_gray"
                app:maskHeight="48dp"
                app:noEmpty="true"
                app:normalTextColor="#999999"
                app:normalTextSize="11sp"
                app:selectedTextColor="#FFFFFFFF"
                app:selectedTextSize="11sp"
                app:unitHeight="50dp"
                style="@style/wheel_style"
                android:visibility="gone"
                />

            <shangri.example.com.shangri.ui.view.WheelView
                android:id="@+id/dialog_data2"
                app:itemNumber="3"
                app:lineColor="@color/bg_color_little_dark_gray"
                app:maskHeight="48dp"
                app:noEmpty="true"
                app:normalTextColor="#999999"
                app:normalTextSize="11sp"
                app:selectedTextColor="#FFFFFFFF"
                app:selectedTextSize="11sp"
                app:unitHeight="50dp"
                style="@style/wheel_style"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>