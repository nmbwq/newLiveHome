<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_heise">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/bg_color_appbar_layout_black"
        android:paddingTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/setting_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp_12"
                android:padding="10dp"
                android:src="@mipmap/ic_land_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="主播绑定"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34" />

            <TextView
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="提交"
                android:textColor="@color/white"
             />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appbar"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="#04ffffff">

            <TextView
                android:drawablePadding="8dp"
                android:drawableLeft="@mipmap/zhubo_leixing_10"
                android:id="@+id/tv_host_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_pass"
                android:text="主播类型"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView

                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="60dp"
                android:layout_toRightOf="@+id/tv_host_type"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请选择主播类型"
                android:lines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/text_color_little_black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_select_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:padding="20dp"
                android:src="@mipmap/ic_wd_more" />
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="#20000000"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"/>
        </RelativeLayout>







        <RelativeLayout
            android:id="@+id/rl_platform"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="#04ffffff">

            <TextView
                android:drawablePadding="8dp"
                android:drawableLeft="@mipmap/pingtai_1"
                android:id="@+id/tv_panda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_clsan"
                android:text="直播平台"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView

                android:id="@+id/tv_platform"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_panda"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请选择直播平台"
                android:lines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/text_color_little_black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_select_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:padding="20dp"
                android:src="@mipmap/ic_wd_more" />
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="#20000000"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"/>

        </RelativeLayout>




        <RelativeLayout
            android:background="#04ffffff"

            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                android:drawablePadding="8dp"
                android:drawableLeft="@mipmap/id"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text="直播间ID"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="number"
                android:textColor="@color/white"
                android:id="@+id/et_live_id"
                android:gravity="right|center_vertical"
                android:textSize="15sp"
                android:textColorHint="@color/color_666666"
                android:hint="请填写"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:layout_marginLeft="120dp"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="#20000000"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"/>
        </RelativeLayout>


        <TextView
            android:text="直播截图（需本人上镜，可传3张）"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="10dp"
            android:paddingTop="21dp"
            android:paddingRight="10dp"
            android:paddingBottom="21dp">

            <ImageView
                android:id="@+id/im1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/tianjia_zhaopian6" />

            <ImageView
                android:id="@+id/im2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/tianjia_zhaopian6" />

            <ImageView
                android:id="@+id/im3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/tianjia_zhaopian6" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
