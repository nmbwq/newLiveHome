<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mengban_1"
    android:paddingLeft="35dp"
    android:paddingRight="35dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:layout_centerInParent="true"
        android:background="@drawable/color_dialog_cancle_shape16"
        android:paddingTop="21dp">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="选择职位类型"
            android:textColor="#ffffff"
            android:textSize="15sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_type"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="51dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:scrollbars="none">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/card_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>


        <RelativeLayout
            android:id="@+id/rl_commit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/color_dialog_cancle_shape16">

            <TextView
                android:id="@+id/tv_commit"
                style="@style/color_d0a76c_15"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/color_dialog_commit_shape12"
                android:gravity="center"
                android:text="确定" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
