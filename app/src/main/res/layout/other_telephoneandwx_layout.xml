<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_otherphwx_time"
            style="@style/color_999999_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="昨天：12:30" />

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_otherphwx_time"
            android:layout_marginTop="20dp">

            <shangri.example.com.shangri.ui.view.CircleImageView
                android:id="@+id/my_otherphwx_photo1"
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_touxiang" />


            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/qp_bai" />


                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/color_dialog_commit_shape15"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_otherphwx_text"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="会长的电话号会长的电话号会长的电话号:13756782346"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dedede" />

                    <TextView
                        android:id="@+id/tv_tlorwx_text"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:gravity="center"
                        android:text="拨打电话"
                        android:textColor="#02a7f0"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_otherphwx_isreade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_info"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="52dp"
                android:text="已读"
                android:textColor="#999999"
                android:textSize="10sp" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>