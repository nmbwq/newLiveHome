<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mengban_1"
    android:paddingLeft="37dp"
    android:paddingRight="37dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <LinearLayout
            android:id="@+id/ll_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im_delete"
            android:background="@drawable/color_dialog_cancle_shape16"
            android:orientation="vertical"
            android:paddingLeft="26dp"
            android:paddingTop="24dp"
            android:paddingRight="26dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/tv_leave_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="留电话"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                />


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="您将给对方预留号码"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预留电话:"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/tv_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请输入电话号码"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="#ffffff"
                            android:textColorHint="#999999"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="修改"
                            android:textColor="#999999"
                            android:textSize="15sp" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_cancle"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@mipmap/bg_kuang2"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#cf9a57"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_next"
                    style="@style/color_white_14"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@mipmap/bg_kuang1"
                    android:gravity="center"
                    android:text="确定" />


            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
