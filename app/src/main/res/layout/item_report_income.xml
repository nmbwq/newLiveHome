<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#04ffffff"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#30000000"
            android:orientation="vertical"></LinearLayout>

        <shangri.example.com.shangri.ui.view.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_touxiang" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="26dp"
            android:padding="5dp"
            android:src="@mipmap/fenxiang2" />

    </RelativeLayout>
    <!--</FrameLayout>-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="花椒"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_income_name"
                style="@style/tv_income_team"
                android:text="辅导次数" />

            <ImageView
                android:id="@+id/iv_wenti_tutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:padding="3dp"
                android:src="@mipmap/wenti" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tutor_count"
                style="@style/tv_income_team_2"
                android:text="9000" />

            <TextView
                android:id="@+id/tv_up_type"
                style="@style/color_999999_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="4dp"
                android:gravity="bottom"
                android:text="(魅力值)" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_tutor_pre_count"
            style="@style/tv_income_team"
            android:layout_width="wrap_content"
            android:drawableRight="@mipmap/shangshen"
            android:layout_marginTop="@dimen/dp_12"
            android:text="前日:50" />

        <LinearLayout
            android:id="@+id/ll_yi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
         >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_yi_income_name"
                    style="@style/tv_income_team"
                    android:text="钻石收益" />

                <ImageView
                    android:id="@+id/iv_yi_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:padding="3dp"
                    android:src="@mipmap/wenti" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_yi_income"
                    style="@style/tv_income_team_2"
                    android:text="900,000" />

                <TextView
                    android:id="@+id/tv_up_type_yi"
                    style="@style/color_999999_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4dp"
                    android:gravity="bottom"
                    android:text="(魅力值)" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_yi_income_pre"
                style="@style/tv_income_team"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:drawableRight="@mipmap/shangshen"
                android:text="前日:5000," />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bottom_name"
                style="@style/tv_income_team"
                android:text="开播主播" />

            <ImageView
                android:id="@+id/iv_wenti_kaibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:padding="3dp"
                android:src="@mipmap/wenti" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_host_count"
                style="@style/tv_income_team_2"
                android:text="900" />


            <TextView
                android:id="@+id/tv_down_type"
                style="@style/color_999999_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="4dp"
                android:gravity="bottom"
                android:text="(魅力值)" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_host_pre_count"
            style="@style/tv_income_team"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_9"
            android:text="前日:500"
            android:drawableRight="@mipmap/shangshen"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#201b1b1b" />

        <RelativeLayout
            android:id="@+id/rl_click"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/mingxi" />

                <TextView
                    style="@style/color_999999_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="查看明细" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>