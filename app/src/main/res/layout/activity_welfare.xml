            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:text="1.留电话, "
            android:textColor="@color/color_999999"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv13"
            android:layout_toRightOf="@+id/tv13"
            android:text=" 5"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv13"
            android:layout_toRightOf="@+id/tv_16"
            android:text=" 次/每天"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv13"
            android:layout_alignStart="@+id/tv13"
            android:text="2.拨电话, "
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_14"
            android:layout_toRightOf="@+id/tv_14"
            android:text=" 2"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_14"
            android:layout_toRightOf="@+id/tv_16"
            android:text=" 次/每天"
            android:textColor="@color/color_999999" />


        <TextView
            android:id="@+id/tv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@mipmap/yhflbo"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_8"
            android:text="充值VIP"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="注：拨电话次数:2元/次"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>