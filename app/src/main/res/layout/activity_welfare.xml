        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv6"
            android:layout_alignStart="@+id/tv5"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:text="1.留电话, "
            android:textColor="@color/color_999999"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv7"
            android:layout_toRightOf="@+id/tv7"
            android:text=" 3"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv7"
            android:layout_toRightOf="@+id/tv_9"
            android:text=" 次/每天"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv7"
            android:layout_alignStart="@+id/tv7"
            android:text="2.拨电话, "
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_8"
            android:layout_toRightOf="@+id/tv_8"
            android:text=" 3"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_8"
            android:layout_toRightOf="@+id/tv_c"
            android:text=" 次/每天"
            android:textColor="@color/color_999999" />


        <TextView
            android:id="@+id/tv_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@mipmap/yhfl_t"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_8"
            android:text="公司认证"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="#10000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@mipmap/bg_juxing">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:src="@mipmap/hzfl_czvip" />

        <TextView
            android:id="@+id/tv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
