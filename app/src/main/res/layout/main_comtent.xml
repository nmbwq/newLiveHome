<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mengban_1"
    android:paddingLeft="55dp"
    android:paddingRight="55dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/im_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@mipmap/guanbi1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="346dp"
            android:layout_below="@+id/im_delete"
            android:background="@drawable/color_dialog_cancle_shape18"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/zhanwei_tu" />


            <TextView
                android:layout_width="106dp"
                android:layout_height="27dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="28dp"
                android:background="@drawable/color_dialog_cancle_shape"
                android:gravity="center"
                android:text="了解详情"
                android:textColor="#d0a76c"
                android:textSize="15sp"
                android:visibility="gone"
                />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
