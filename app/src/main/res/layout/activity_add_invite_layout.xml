<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_heise"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_appbar_layout_black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/setting_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:src="@mipmap/ic_land_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="@dimen/dp_12"
                android:gravity="center_vertical"
                android:text="上传简历"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34" />

            <TextView
                android:id="@+id/tv_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text="跳过"
                android:textColor="#ffffff"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#04ffffff"
                android:paddingLeft="10dp"
                android:paddingTop="17dp"
                android:paddingRight="10dp"
                android:paddingBottom="21dp">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/im1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/tianjia_tupian" />

                    <ImageView
                        android:id="@+id/im_fenmian"
                        android:layout_width="23dp"
                        android:layout_height="12dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@mipmap/jl_txb"
                        android:visibility="gone" />


                </RelativeLayout>


                <ImageView
                    android:id="@+id/im2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/zhaopian_xuan" />

                <ImageView
                    android:id="@+id/im3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/gongzuo_hao" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    style="@style/color_white_17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="基本信息" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#04ffffff"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="21dp"
                    android:paddingRight="19dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@mipmap/xingming" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="姓名" />

                        <TextView
                            style="@style/color_d0a76c_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/color_dialog_commit_shape12"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="必填" />


                        <EditText
                            android:id="@+id/et_name"
                            style="@style/color_white_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:gravity="right"
                            android:hint="请填写"
                            android:maxLength="10"
                            android:textColorHint="#666666"
                            android:textCursorDrawable="@drawable/guangbiao_color" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#20000000" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="21dp"
                    android:paddingRight="19dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/im11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="4dp"
                            android:background="@mipmap/xingbie" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/im11"
                            android:text="性别" />

                        <TextView
                            style="@style/color_d0a76c_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="46dp"
                            android:layout_toRightOf="@+id/im11"

                            android:background="@drawable/color_dialog_commit_shape12"

                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="必填" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right">

                            <LinearLayout
                                android:id="@+id/ll_select_nv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/im_nv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/xuanzhong_yuan" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:src="@mipmap/ic_nv" />


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ll_select_nan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:layout_toRightOf="@+id/ll_select_nv"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/im_nan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/yuan_wei" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:src="@mipmap/ic_nan" />


                            </LinearLayout>


                        </RelativeLayout>


                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#20000000" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="21dp"
                    android:paddingRight="19dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@mipmap/nianlin" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="年龄" />

                        <TextView

                            style="@style/color_d0a76c_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"


                            android:layout_marginLeft="10dp"
                            android:background="@drawable/color_dialog_commit_shape12"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="必填" />

                        <RelativeLayout
                            android:id="@+id/rl_select_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_age"
                                style="@style/color_white_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/im_12"
                                android:background="@null"
                                android:hint="@string/edittext_hint1"
                                android:textColorHint="#666666"
                                android:textCursorDrawable="@drawable/guangbiao_color" />


                            <ImageView
                                android:id="@+id/im_12"
                                android:layout_width="8dp"
                                android:layout_height="13dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="15dp"
                                android:src="@mipmap/ic_wd_more" />

                        </RelativeLayout>


                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#20000000" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="21dp"
                    android:paddingRight="19dp"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@mipmap/ic_shengao" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="身高" />


                        <RelativeLayout
                            android:id="@+id/rl_select_stature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_stature"
                                style="@style/color_white_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/iv_stature"
                                android:background="@null"
                                android:hint="@string/edittext_hint1"
                                android:textColorHint="#666666"
                                android:textCursorDrawable="@drawable/guangbiao_color" />


                            <ImageView
                                android:id="@+id/iv_stature"
                                android:layout_width="8dp"
                                android:layout_height="13dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="15dp"
                                android:src="@mipmap/ic_wd_more"
                                tools:ignore="DuplicateIds" />

                        </RelativeLayout>


                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#20000000" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="21dp"
                    android:paddingRight="19dp"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@mipmap/ic_tizhong" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="体重" />


                        <RelativeLayout
                            android:id="@+id/rl_kg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_kg"
                                style="@style/color_white_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/iv_kg"
                                android:background="@null"
                                android:hint="@string/edittext_hint1"
                                android:textColorHint="#666666"
                                android:textCursorDrawable="@drawable/guangbiao_color" />


                            <ImageView
                                android:id="@+id/iv_kg"
                                android:layout_width="8dp"
                                android:layout_height="13dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="15dp"
                                android:src="@mipmap/ic_wd_more"
                                tools:ignore="DuplicateIds" />

                        </RelativeLayout>


                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#20000000" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="21dp"
                    android:paddingRight="19dp"
                    android:paddingBottom="15dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@mipmap/shouji" />

                        <TextView
                            style="@style/color_white_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="联系方式" />

                        <TextView

                            style="@style/color_d0a76c_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"

                            android:background="@drawable/color_dialog_commit_shape12"

                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="必填" />

                        <TextView
                            android:id="@+id/tv_phone"
                            style="@style/color_white_15"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="right"
                            android:hint="请填写"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColorHint="#666666"
                            android:textCursorDrawable="@drawable/guangbiao_color" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#20000000" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout

                android:id="@+id/ll_select_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#04ffffff"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="19dp"
                android:paddingBottom="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/nianxian" />

                    <TextView
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="直播年限" />

                    <TextView

                        style="@style/color_d0a76c_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/color_dialog_commit_shape12"

                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="必填" />

                    <RelativeLayout
                        android:id="@+id/rl_term"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_term"
                            style="@style/color_white_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/im_13"
                            android:background="@null"
                            android:hint="请选择"
                            android:textColorHint="#666666"
                            android:textCursorDrawable="@drawable/guangbiao_color" />


                        <ImageView
                            android:id="@+id/im_13"
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/ic_wd_more" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#20000000" />

            <LinearLayout
                android:id="@+id/ll_select_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#04ffffff"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="21dp"
                android:paddingRight="19dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/dixin" />

                    <TextView
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="期望底薪" />


                    <RelativeLayout
                        android:id="@+id/rl_basic_salary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv_basic_salary"
                            style="@style/color_white_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/im_14"
                            android:background="@null"
                            android:hint="请选择"
                            android:textColorHint="#666666"
                            android:textCursorDrawable="@drawable/guangbiao_color" />


                        <ImageView
                            android:id="@+id/im_14"
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/ic_wd_more" />

                    </RelativeLayout>


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#20000000" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#04ffffff"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="21dp"
                android:paddingRight="19dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/scjl_qzzt" />

                    <TextView
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="求职意向" />

                    <TextView
                        style="@style/color_d0a76c_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/im11"

                        android:background="@drawable/color_dialog_commit_shape12"

                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="必填" />


                    <TextView
                        android:id="@+id/tv_job_objective"
                        style="@style/color_white_15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="请选择"
                        android:inputType="text"
                        android:maxLength="11"
                        android:textColorHint="#666666"
                        android:textCursorDrawable="@drawable/guangbiao_color" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"

                        android:layout_marginTop="@dimen/dp_4"

                        android:src="@mipmap/ic_wd_more" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#20000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#04ffffff"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="21dp"
                android:paddingRight="19dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/jianli_yixiang" />

                    <TextView
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="求职状态" />

                    <TextView
                        style="@style/color_d0a76c_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/im11"

                        android:background="@drawable/color_dialog_commit_shape12"

                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="必填" />


                    <TextView
                        android:id="@+id/tv_job_type"
                        style="@style/color_white_15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="请选择"
                        android:inputType="text"
                        android:maxLength="11"
                        android:textColorHint="#666666"
                        android:textCursorDrawable="@drawable/guangbiao_color" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"

                        android:layout_marginTop="@dimen/dp_4"

                        android:src="@mipmap/ic_wd_more" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#04ffffff">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#20000000" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="个人优势"
                android:textColor="@color/white"
                android:visibility="gone" />


            <EditText
                android:id="@+id/et_personal_strength"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#04ffffff"
                android:gravity="left"
                android:hint="   \t1.个性开朗,爱互动。\n
  \t2.有粉丝互动群体。"
                android:textColor="@color/white"
                android:textColorHint="@color/white"

                android:textSize="14sp"
                android:visibility="gone" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_biography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="简历是否公开"
                    android:textColor="@color/white" />


                <ImageView
                    android:id="@+id/iv_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="80dp"
                    android:src="@mipmap/xuanzhong_yuan"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="是"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toRightOf="@+id/iv_yes" />

                <ImageView
                    android:id="@+id/iv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:src="@mipmap/yuan_wei"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:text="否"
                    android:textColor="@color/white"

                    app:layout_constraintLeft_toLeftOf="@+id/iv_no" />

            </android.support.constraint.ConstraintLayout>


            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="30dp"
                android:background="@drawable/bottom_select"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="18dp" />


        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/im_show_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ydy"
        android:visibility="gone" />


</RelativeLayout>
