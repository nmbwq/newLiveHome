<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/sc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#212121">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="19dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#212121"
                    android:orientation="vertical"
                    android:paddingLeft="19dp"
                    android:paddingRight="19dp">

                    <TextView
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="线上/线下" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/re_cycle_date_upanddown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="19dp"
                    android:paddingRight="19dp">

                    <TextView
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="直播类型" />

                    <LinearLayout
                        android:id="@+id/ll_type_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="15dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp">

                        <TextView
                            android:id="@+id/ll_type_text"
                            style="@style/color_d0a76c_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="更多" />

                        <ImageView
                            android:id="@+id/ll_type_image"
                            android:layout_width="11dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/zhxiangxia_jiantou" />

                    </LinearLayout>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/re_cycle_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="19dp"
                    android:paddingRight="19dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="19dp"
                    android:paddingRight="19dp">

                    <TextView
                        style="@style/color_white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="直播平台" />

                    <LinearLayout
                        android:id="@+id/ll_plat_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="15dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp">

                        <TextView
                            android:id="@+id/ll_plat_text"
                            style="@style/color_d0a76c_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="更多" />

                        <ImageView
                            android:id="@+id/ll_plat_image"
                            android:layout_width="11dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/zhxiangxia_jiantou" />

                    </LinearLayout>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/re_cycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="19dp"
                    android:paddingRight="19dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#1b1b1b"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:id="@+id/tv_cycle_cncle"
                        style="@style/color_d0a76c_15"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/color_dialog_cancle_shape12"
                        android:gravity="center"
                        android:text="重置" />

                    <TextView
                        android:id="@+id/tv_commit_cycle"
                        style="@style/color_white_15"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/color_dialog_commit_shape1"
                        android:gravity="center"
                        android:text="确定" />

                </RelativeLayout>
            </LinearLayout>


        </ScrollView>


    </RelativeLayout>


</FrameLayout>